<?xml version="1.0" encoding="utf-8"?>
<com.otaliastudios.zoom.ZoomLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:overScrollHorizontal="true"
    app:overScrollVertical="true"
    app:overPinchable="true"
    app:minZoomType="zoom"
    app:maxZoomType="zoom"
    app:hasClickableChildren="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_start_color"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/default_space"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/semi_a_card_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_space">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/semi_a_card_1_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="team" />

                    <View
                        android:layout_width="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="match_parent"
                        android:background="@color/separator_color" />

                    <EditText
                        android:id="@+id/semi_a_card_1_textview_score"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="\?"
                        android:inputType="number" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/semi_a_card_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_confrontation">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/semi_a_card_2_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:text="team" />

                    <View
                        android:layout_width="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="match_parent"
                        android:background="@color/separator_color" />

                    <EditText
                        android:id="@+id/semi_a_card_2_textview_score"
                        android:layout_width="50dp"
                        android:background="@null"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="\?"
                        android:inputType="number" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/semi_b_card_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_round">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/semi_b_card_1_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:text="team" />

                    <View
                        android:layout_width="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="match_parent"
                        android:background="@color/separator_color" />

                    <EditText
                        android:id="@+id/semi_b_card_1_textview_score"
                        android:layout_width="50dp"
                        android:background="@null"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="\?"
                        android:inputType="number" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/semi_b_card_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_space"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/semi_b_card_2_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="team" />

                    <View
                        android:layout_width="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="match_parent"
                        android:background="@color/separator_color" />

                    <EditText
                        android:id="@+id/semi_b_card_2_textview_score"
                        android:layout_width="50dp"
                        android:background="@null"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="\?"
                        android:inputType="number" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/separator_hori"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/semi_a_card_1_arrow_1"
                android:layout_marginTop="41dp"
                android:background="@android:color/white" />

            <View
                android:layout_width="1dp"
                android:layout_height="37dp"
                android:id="@+id/semi_a_card_1_arrow_2"
                android:layout_gravity="right"
                android:background="@android:color/white" />
            <View
                android:layout_width="1dp"
                android:id="@+id/semi_a_card_2_arrow_2"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:background="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:id="@+id/semi_a_card_2_arrow_1"
                android:layout_height="1dp"
                android:background="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/semi_b_card_1_arrow_1"
                android:layout_marginTop="150dp"
                android:background="@android:color/white" />

            <View
                android:layout_width="1dp"
                android:layout_height="37dp"
                android:id="@+id/semi_b_card_1_arrow_2"
                android:layout_gravity="right"
                android:background="@android:color/white" />
            <View
                android:layout_width="1dp"
                android:id="@+id/semi_b_card_2_arrow_2"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:background="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:id="@+id/semi_b_card_2_arrow_1"
                android:layout_height="1dp"
                android:background="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/separator_hori_half"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/final_card_1_arrow_0"
                android:layout_marginTop="78dp"
                android:background="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/final_card_2_arrow_0"
                android:layout_marginTop="225dp"
                android:background="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/final_card_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/final_card_1_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Final" />

                    <View
                        android:layout_width="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="match_parent"
                        android:background="@color/separator_color" />

                    <EditText
                        android:id="@+id/final_card_1_textview_score"
                        android:layout_width="50dp"
                        android:background="@null"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="\?"
                        android:inputType="number" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/final_card_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/final_card_2_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Final" />

                    <View
                        android:layout_width="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="match_parent"
                        android:background="@color/separator_color" />

                    <EditText
                        android:id="@+id/final_card_2_textview_score"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@null"
                        android:hint="\?"
                        android:inputType="number" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/separator_hori"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/final_card_1_arrow_1"
                android:layout_marginTop="78dp"
                android:background="@android:color/white" />

            <View
                android:layout_width="1dp"
                android:id="@+id/final_card_1_arrow_2"
                android:layout_height="112dp"
                android:layout_gravity="right"
                android:background="@android:color/white" />
            <View
                android:layout_width="1dp"
                android:layout_height="112dp"
                android:id="@+id/final_card_2_arrow_2"
                android:layout_gravity="right"
                android:background="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/final_card_2_arrow_1"
                android:background="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/separator_hori_half"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/winner_arrow_0"
                android:layout_marginTop="190dp"
                android:background="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/default_space"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/winner_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Winner" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</com.otaliastudios.zoom.ZoomLayout>