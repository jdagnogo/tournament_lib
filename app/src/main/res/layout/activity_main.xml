<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jdagnogo.tournamentSample.MainActivity">

    <com.example.jdagnogo.mytournament.TournamentView
        android:id="@+id/tournament_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:id="@+id/set_teams"
            android:layout_height="wrap_content"
            android:text="Set Teams" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/simulate"
            android:layout_height="wrap_content"
            android:text="Simulation" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/reset"
            android:layout_height="wrap_content"
            android:text="reset" />
    </LinearLayout>

</LinearLayout>
